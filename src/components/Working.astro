---
import WorkingCard from "./WorkingCard.astro";
---

<section class="mt-10 max-w-7xl mx-auto mb-8 px-4 md:px-0">
    <h1 class="font-bold text-2xl mb-5">How It Works</h1>
    <div class="flex flex-col md:flex-row md:items-stretch gap-5 md:gap-3">
        <WorkingCard
            icon="/building.png"
            text="Enter City"
            desc="Input your city to receive tailored information."
        />
        <WorkingCard
            icon="/bulb.png"
            text="Get Weather"
            desc="Receive real-time weather updates for your location."
        />
        <WorkingCard
            icon="/sun.png"
            text="See Tips"
            desc="Get personalized lifestyle suggestions based on the weather."
        />
    </div>
</section>
